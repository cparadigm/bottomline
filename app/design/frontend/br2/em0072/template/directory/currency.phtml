/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="currency">
<div class="block block-currency">
    <span class="title-currency"><?php echo $this->__('Currencies') ?></span>    
	<div class="block-content">
	  <ul>
        <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
			  <?php $_selected = ($_code==$this->getCurrentCurrencyCode()) ? 'selected' : '' ?>
			<li class="<?php echo  $_selected ?>">
				<a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" style="background-image:url(<?php echo $this->getSkinUrl('images/currency/'.strtolower($_code).'.png') ?>); background-repeat: no-repeat;"  title="<?php echo $_name ?>"><?php echo $_code ?></a>
			</li>
        <?php endforeach; ?>	
		</ul>	
    </div>
	<script type="text/javascript">decorateGeneric($$('.block-currency .block-content ul li'), ['first','last'])</script>
</div>
</div>
<?php endif; ?>
 
